{
  "private": true,
  "author": {
    "name": "Tomáš Ehrlich",
    "email": "tomas.ehrlich@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest --no-cache --runInBand",
    "watch": "jest --watch",
    "lint:flow": "flow",
    "lint:eslint": "eslint packages/",
    "lint": "npm run lint:eslint && npm run lint:flow",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release perform"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-generator": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-remove-strict-mode": "^0.0.2",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "chalk": "^1.1.3",
    "condition-circle": "^1.5.0",
    "cz-lerna-changelog": "^1.2.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.46.0",
    "flow-typed": "^2.1.2",
    "glob": "^7.1.1",
    "jasmine-reporters": "^2.2.1",
    "jest": "^20.0.3",
    "lerna": "^2.0.0-rc.4",
    "lerna-semantic-release": "^9.1.0",
    "node-emoji": "^1.5.1",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "tmp": "^0.0.31"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lingui/js-lingui.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "testRegex": "(/test/[^/]*|.*\\.test)\\.jsx?$",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "scripts",
      "lib",
      "packages/lingui-react/src/plurals.js",
      "packages/lingui-i18n/src/plurals.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest-env.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "roots": [
      "packages/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "logTransformErrors": true
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "node": 4,
            "browsers": "> 1%, last 2 versions"
          },
          "useBuiltIn": true
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "comments": false
  }
}
