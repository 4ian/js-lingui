{
  "env": {
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "standard",
    "promise",
    "flowtype",
    "import",
    "react",
    "jest"
  ],
  "rules": {
    "no-duplicate-imports": "off",
    "react/display-name": "off"
  }
}
