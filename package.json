{
  "private": true,
  "author": {
    "name": "Tomáš Ehrlich",
    "email": "tomas.ehrlich@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "watch": "jest --watch",
    "lint:flow": "flow",
    "lint:eslint": "eslint packages/",
    "lint": "npm run lint:eslint && npm run lint:flow",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release perform"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-remove-strict-mode": "^0.0.2",
    "babel-preset-env": "^1.1.8",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "condition-circle": "^1.5.0",
    "cz-lerna-changelog": "^1.1.0",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.4.6",
    "eslint": "^3.16.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "flow-bin": "^0.39.0",
    "flow-typed": "^2.0.0",
    "glob": "^7.1.1",
    "jasmine-reporters": "^2.2.0",
    "jest": "^19.0.0",
    "lerna": "2.0.0-beta.37",
    "lerna-semantic-release": "^9.0.6",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lingui/js-lingui.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "babel": {
    "presets": [
      "latest",
      "react"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "testRegex": "(/test/[^/]*|.*\\.test)\\.jsx?$",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "scripts",
      "packages/lingui-react/src/plurals.js",
      "packages/lingui-i18n/src/plurals.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest-env.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "roots": [
      "packages/"
    ],
    "transformIgnorePatterns": [
      "node_modules/"
    ]
  }
}
