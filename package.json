{
  "author": {
    "name": "Tomáš Ehrlich",
    "email": "tomas.ehrlich@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "watch": "jest --watch",
    "ci": "jest --reporter mocha-junit-reporter",
    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release perform"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-remove-strict-mode": "^0.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "condition-circle": "^1.5.0",
    "cz-lerna-changelog": "^1.0.0",
    "glob": "^7.1.1",
    "jasmine-reporters": "^2.2.0",
    "jest": "^18.1.0",
    "lerna": "2.0.0-beta.31",
    "lerna-semantic-release": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lingui/js-lingui.git"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "jest": {
    "testRegex": "/test/[^/]*\\.jsx?$",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "node_modules",
      "scripts"
    ],
    "coverageFormats": [
      "json",
      "html"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/jest-env.js"
  }
}
